<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.syj.spring.test.ajax.repository.FavoriteRepository">
 
 	<select id="selectFavoriteList"
 	resultType="com.syj.spring.test.ajax.domain.Favorite">
 		SELECT
 			`id`
 			,`name`
 			,`url`
  			, `createdAt`
 			, `updatedAt`
 		FROM
 			`favorite`
 		ORDER BY
 			`id` DESC
 	</select>
 	
 	<insert id="insertFavorite"
 	parameterType="map">
 		INSERT INTO
 			`favorite`
 		(
 			`name`
 			, `url`
 		)
 		VALUE
 		(
 			#{name}
 			, #{url}
 		)
 	</insert>
 	
 	<select id="selectCountByUrl"
 	parameterType="string" resultType="int">
 		SELECT
 			count(*)
 		FROM
 			`favorite`
 		WHERE
 			`url` = #{url}
 	</select>

 </mapper>